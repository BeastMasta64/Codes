import telebot as tb

batya = tb.TeleBot('1180758840:AAEqV4bF3dDTE6N8Ci_KcZR4ID5_4yNFCuQ')


@batya.message_handler(commands=['Апчи'])
def bud_zdorov(message):
    tekst = 'Будь здоров!'
    batya.send_message(message.chat.id, tekst, parse_mode='html')


@batya.message_handler(commands=['Start', 'start'])
def start(message):
    tekst = f'<b>Здарова {message.from_user.first_name} {message.from_user.last_name}</b>!'
    batya.send_message(message.chat.id, tekst, parse_mode='html')


@batya.message_handler(commands=['Insta', 'insta'])
def insta(message):
    tekst = 'Добро пожаловать!'
    click = tb.types.InlineKeyboardMarkup()
    click.add(tb.types.InlineKeyboardButton('Наша Инста', url='https://instagram.com/8m.art?igshid=1qgn54guqmkg6'))
    batya.send_message(message.chat.id, tekst, parse_mode='html', reply_markup=click)


@batya.message_handler(commands=['Price', 'price', 'Цена', 'цена'])
def price(message):
    tekst = 'Наш товарный ряд'
    knopki = tb.types.ReplyKeyboardMarkup(resize_keyboard=True, row_width=3)
    knopka1 = tb.types.InlineKeyboardButton('Джинсовая куртка')
    knopka2 = tb.types.InlineKeyboardButton('Футболка')
    knopka3 = tb.types.InlineKeyboardButton('Кепка')
    knopka4 = tb.types.InlineKeyboardButton('Носки')

    knopki.add(knopka1, knopka2, knopka3, knopka4)
    batya.send_message(message.chat.id, tekst, parse_mode='html', reply_markup=knopki)


batya.polling(none_stop=True)
